pkgname=libresourceqt
pkgver=1.30.2
pkgrel=0
pkgdesc="Mer Resource Policy Qt API"
arch="all"
url="https://git.merproject.org/mer-core/libresourceqt"
license="LGPLv2.1"
makedepends="qt5-qtbase-dev libresource-dev"
source="$pkgname-$pkgver.tar.bz2::https://git.merproject.org/mer-core/$pkgname/repository/archive.tar.bz2?ref=$pkgver"
subpackages="$pkgname-dev $pkgname-doc"
_rev=092a573e835a4f8224e6af54b6b30486f3612ea4

builddir="$srcdir/$pkgname-$pkgver-$_rev"

build() {
	cd "$builddir"
	qmake-qt5
	make
}

package() {
	cd "$builddir"
	make INSTALL_ROOT="$pkgdir/" install
}
