# Maintainer: TheKit <nekit1000 at gmail.com>
pkgname=libusb-moded-qt
pkgver=1.4
pkgrel=0
pkgdesc="A library of Qt5 bindings for usb_moded"
arch="all"
url="https://git.merproject.org/mer-core/libusb-moded-qt"
license="GPL"
depends=('qt5-qtbase' 'usb-moded')
makedepends=""


source="$pkgname-$pkgver.tar.bz2::https://git.merproject.org/mer-core/libusb-moded-qt/repository/archive.tar.bz2?ref=$pkgver"


pkgver() {
	cd "$builddir"
	git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
	cd "$builddir"
	qmake
	make
}

package() {
	cd "$builddir"
	make INSTALL_ROOT="$pkgdir/" install
}
