pkgname=libngf
pkgver=0.26
pkgrel=0
pkgdesc="Non-graphic feedback C-based client library"
arch="all"
url="https://git.merproject.org/mer-core/libngf"
license="GPL"
makedepends="autoconf automake libtool dbus-glib-dev check-dev"
source="$pkgname-$pkgver.tar.bz2::https://git.merproject.org/mer-core/libngf/repository/archive.tar.bz2?ref=$pkgver"
_rev=06be88da245bf5eed6880e871f65d35115d05674

builddir="$srcdir/$pkgname-$pkgver-$_rev"

build() {
	cd "$builddir"
	./autogen.sh --prefix=/usr
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir/" install
}
