pkgname=mce-headers-mer
pkgver=1.24.0
pkgrel=0
pkgdesc="Development files for mce"
arch="noarch"
url="https://git.merproject.org/mer-core/mce-dev"
license="LGPL-2.1"
makedepends="coreutils doxygen"
source="$pkgname-$pkgver.tar.bz2::https://git.merproject.org/mer-core/mce-dev/repository/archive.tar.bz2?ref=$pkgver"
_rev=27897482278236ad3d7bd227823b78e43a409569

builddir="$srcdir/mce-dev-$pkgver-$_rev"

build() {
	cd "$builddir"
	mkdir -p doc/html
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir/" install
}
