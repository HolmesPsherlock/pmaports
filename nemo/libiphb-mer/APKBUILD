# Maintainer: TheKit <nekit1000 at gmail.com>
pkgname=libiphb-mer
pkgver=1.2.4
pkgrel=0
pkgdesc="C API for using IP Heartbeat service"
arch="all"
url="https://git.merproject.org/mer-core/libiphb"
license="GPL"
depends=('dbus-glib' 'libdsme')
makedepends="git mce-headers-git"


source="$pkgname-$pkgver.tar.bz2::https://git.merproject.org/mer-core/libiphb/repository/archive.tar.bz2?ref=$pkgver"


pkgver() {
	cd "$builddir"
	git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
	cd "$builddir"
    ./autogen.sh
    ./configure --prefix=/usr
    make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir/" install
}
