# Maintainer: TheKit <nekit1000 at gmail.com>
pkgname=glacier-home
pkgver=0.26.12
pkgrel=0
pkgdesc="Nemo Glacier UX homescreen"
arch="all"
url="https://git.merproject.org/mer-core/qtaround"
license="GPL"
depends=('qt5-qtbase' 'lipstick')
makedepends=""


source=('git+https://github.com/nemomobile-ux/glacier-home.git#branch=manhattan')


pkgver() {
	cd "$builddir"
	git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
	cd "$builddir"
}

build() {
	cd "$builddir"
	qmake PREFIX=/usr
	make
}

package() {
	cd "$builddir"
	make INSTALL_ROOT="$pkgdir/" install
}
