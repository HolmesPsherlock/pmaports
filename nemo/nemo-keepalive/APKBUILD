pkgname=nemo-keepalive
pkgver=1.6.2
pkgrel=0
pkgdesc="CPU and display keepalive and scheduling library"
arch="all"
url="https://git.merproject.org/mer-core/nemo-keepalive"
license="GPL"
makedepends="qt5-qtbase-dev qt5-qtdeclarative-dev"
source="https://git.merproject.org/mer-core/$pkgname/-/archive/$pkgver/$pkgname-$pkgver.tar.bz2"

prepare() {
    default_prepare
    sed -i -e "s/qdbusxml2cpp/qdbusxml2cpp-qt5/" "$builddir"/lib/lib.pro
}

build() {
	cd "$builddir"
	qmake-qt5
	make
	make -C lib-glib
	make -C tools
}

package() {
	cd "$builddir"
	make INSTALL_ROOT="$pkgdir/" install
    make -C lib-glib install ROOT="$pkgdir/"
    make -C tools install ROOT="$pkgdir/"
}
sha512sums="578203cfce679fa5db0d9497582514e995e3fc552ba8984c29bad216dd4ebed46abe8027e3d0f971bef3eba98b4fabfda1eeca01d104b09e5583bf4a709b944c  nemo-keepalive-1.6.2.tar.bz2"
