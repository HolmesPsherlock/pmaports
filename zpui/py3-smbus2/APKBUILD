pkgbase=smbus2
pkgname=py3-smbus2
pkgver=0.3.0
pkgrel=0
pkgdesc=" A drop-in replacement for smbus-cffi/smbus-python in pure Python"
arch="noarch"
url="https://github.com/kplindegaard/smbus2"
license="MIT"
makedepends="py3-setuptools python3-dev py3-mock py3-nose"
source="$pkgname-$pkgver.tar.gz::https://github.com/kplindegaard/smbus2/archive/$pkgver.tar.gz"
builddir="$srcdir/$pkgbase-$pkgver"

build() {
	python3 setup.py build
}

check() {
	python3 setup.py test
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}
