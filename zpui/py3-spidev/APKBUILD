pkgname=py3-spidev
pkgver=3.4
pkgrel=0
pkgdesc="A python module for interfacing with SPI devices from user space via the spidev linux kernel driver"
arch="all"
url="https://github.com/doceme/py-spidev"
license="MIT"
depends="linux-headers"
makedepends="py3-setuptools python3-dev linux-headers"
source="$pkgname-$pkgver.tar.gz::https://github.com/doceme/py-spidev/archive/v$pkgver.tar.gz"
options="!check" # No tests available
builddir="$srcdir/py-spidev-$pkgver"

build() {
	python3 setup.py build
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}
