pkgname="device-motorola-maserati"
pkgdesc="Motorola Motorola Droid 4"
pkgver=2
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="armv7"
options="!check !archcheck"
depends="postmarketos-base linux-motorola-maserati"
makedepends="devicepkg-dev"
source="deviceinfo boot.cfg initfs-hook.sh"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname

	install -Dm644 "$srcdir"/boot.cfg \
		"$pkgdir"/boot/boot/boot.cfg

}
